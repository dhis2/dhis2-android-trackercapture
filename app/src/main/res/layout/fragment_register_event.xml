<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/register_progress" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/dataentry_latitudeedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:inputType="numberDecimal"
                android:ems="10"
                android:singleLine="true"
                android:visibility="gone">

            </EditText>

            <EditText
                android:id="@+id/dataentry_longitudeedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:inputType="numberDecimal"
                android:ems="10"
                android:singleLine="true"
                android:visibility="gone">

            </EditText>

            <Button
                android:id="@+id/dataentry_getcoordinatesbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:background="@drawable/ic_menu_mylocation"
                android:visibility="gone" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/dataentry_dataElementContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
</ScrollView>